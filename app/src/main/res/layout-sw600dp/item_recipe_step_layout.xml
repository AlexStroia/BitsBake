<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clStep"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50dp"
        android:background="@drawable/list_item_selector"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_step_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8dp"
            android:text="@string/step_details"
            android:textSize="@dimen/_18sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_step_number"
            app:layout_constraintStart_toEndOf="@+id/tv_step_number"
            app:layout_constraintTop_toBottomOf="@+id/tv_step_number" />

        <TextView
            android:id="@+id/tv_step_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8dp"
            android:layout_marginTop="@dimen/_8dp"
            android:layout_marginBottom="@dimen/_8dp"
            android:text="@string/step_number"
            android:textColor="@color/custom_red"
            android:textSize="@dimen/_18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:contentDescription="@null"
            app:layout_constraintBottom_toBottomOf="@+id/tv_step_detail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_step_detail"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_video" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
